.footer 
    width 100%
    background-color: #3c3c3c

.footer-wrp 
    display flex
    padding 14px 0px
    align-items: center
    justify-content: space-between
    @media (max-width: 500px)
        padding: 7px 0

.footer__name
    font-size: 30px
    color #fff
    text-transform: uppercase
    margin-bottom: 5px
    @media (max-width: 500px)
        font-size: 22px
.footer__tel
    font-size 20px
    color #fff
    @media (max-width: 500px)
        font-size 16px

.footer__socials    
    display flex

.footer__icon 
    width 26px
    height 26px
    margin-right 10px
    cursor pointer
    & svg 
        width 100%
        height 100%
        fill: #fff
        transition: 0.5s all
        &:hover 
            fill: purple
    @media (max-width: 500px)
        width 18px
        height 18px