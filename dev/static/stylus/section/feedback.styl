.feedback
    display flex
    position fixed
    right  -1px
    top: 50%
    transform: translateY(-50%)
    z-index 12

.feedback-wrp
    position relative

.feedback__close
    position absolute
    right 10px
    top 10px
    width 40px
    height 40px
    display flex
    justify-content: center
    align-items: center
    display flex
    cursor pointer
    & svg 
        height 20px
        width 20px
        @media (max-width: 500px)
            height 14px
            width 14px
    
.feedback__open
    border-radius: 15px
    border: 2px solid #3c3c3c
    border-top-right-radius: 0px
    border-bottom-right-radius: 0px
    cursor pointer
    display flex
    background-color: #fff

.feedback__open-text 
    padding 10px 10px
    font-size 18px
    @media (max-width: 500px)
        font-size: 14px
        padding: 8px 8px

.feedback__content
    width 320px
    position absolute
    top -1px
    left 100%
    box-shadow: 5px 5px 10px #c3c3c3
    padding 20px 20px
    display flex
    flex-direction: column
    background-color: #fff
    transform: translateX(0px)
    transition: 0.5s all
    &.active
        transform: translateX(-320px)

.feedback__title
    font-size: 24px
    margin-bottom 20px
    margin-right 40px

.feedback__form
    display flex
    flex-direction: column
    align-items: flex-start

.feedback__name,.feedback__tel 
    width 220px
    height 35px
    padding: 5px 10px
    border: 1px solid #000000
    border-radius: 10px
    margin-bottom 10px

.feedback__sent.button
    font-size 18px
    cursor pointer